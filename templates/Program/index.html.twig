{% extends "./base.html.twig" %}

{% block body %}
<div class="container m-auto">
    <h1 class="m-3 text-start font-weight-bold">Series filtr√©es par categories  </h1>
    <a href="{{path('program_new_serie')}}">ajouter une serie</a>
    <div class="row m-auto">
        
        {%for program in programs%}
        <div class="col m-auto">
            
            <div class="card my-3" style="width: 14rem;">
                <img src="{{ asset('build/images/image.png') }}" class="card-img-top" alt="...">
                <div class="card-body bg-dark text-white">
                    <a href="{{path('program_details',{id:program.id})}}" class="btn btn-light mb-2"> {{program.title}} </a>
                    <p class="card-text program-paragraph"> {{program.synopsis}} </p>
                    <p class="card-text text-danger">tom cruise {{loop.index}} </p>
                </div>
            </div>
        </div>
{%endfor%}
    </div>
    {% for category, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ category }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

</div>
{% endblock  %} 